<%= render partial: 'shared/home_link', locals: {path: "/"} %>
<%= render partial: 'shared/admin_links', locals: {path: "/admin"} %>

<h1>Admin Merchants Index</h1>

<% @merchants.each do |merchant| %>
<div id="merchant-<%= merchant.id %>">
  <h2><%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %></h2>
  <p><%= merchant.status %></p>
  <% if merchant.status == "Enabled" %>
  <%= button_to 'Disable', "/admin/merchants/#{merchant.id}", method: :patch, params: {status: "Disabled"}%>
    <% elsif merchant.status == "Disabled" %>
    <%= button_to 'Enable', "/admin/merchants/#{merchant.id}", method: :patch, params: {status: "Enabled"} %>
    <% end %>
</div>
<% end %>
