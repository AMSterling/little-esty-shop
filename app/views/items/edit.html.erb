<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: @item.name %><br/>

  <%= form.label :description %>
  <%= form.text_area :description, size: "55x5", value: @item.description %><br/>

  <%= form.label :unit_price %>
  <%= form.text_field :unit_price, value: @item.unit_price %><br/>

  <%= form.submit "Submit" %>
<% end %>
